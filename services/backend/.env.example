# Salesforce OAuth
SALESFORCE_CLIENT_ID=your_salesforce_client_id
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret
SALESFORCE_REDIRECT_URI=http://localhost:3001/auth/salesforce/callback

# Microsoft Graph (OneDrive) OAuth
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_REDIRECT_URI=http://localhost:3001/auth/onedrive/callback

# AI Inference Configuration
# Preferred backend: 'ollama' for local, 'openai' for remote API
PREFERRED_BACKEND=ollama

# Ollama Local LLM
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gemma3:270m

# OpenAI-Compatible API (optional - for remote inference)
# Leave blank to use Ollama only
OPENAI_ENDPOINT=
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4

# CORS Proxy URL (required for OpenAI-compatible APIs)
PROXY_URL=http://localhost:3002/proxy

# Business Intelligence APIs
BI_API_KEY=your_bi_api_key
BI_BASE_URL=https://api.example-bi-service.com

# Server Configuration
PORT=3001
HOST=localhost
NODE_ENV=development

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key_here